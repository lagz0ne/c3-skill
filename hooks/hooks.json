{
  "description": "C3 architecture gate - requires ADR before code changes",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/c3-gate",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
