#!/usr/bin/env bash
#
# Tests for c3-gate (bash script)
#
# Run with: ./scripts/test-c3-gate
#

set -uo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
GATE_SCRIPT="$SCRIPT_DIR/c3-gate"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

TESTS_RUN=0
TESTS_PASSED=0
TESTS_FAILED=0

# Test helper functions
run_gate() {
    local input="$1"
    local project_dir="$2"
    CLAUDE_PROJECT_DIR="$project_dir" bash "$GATE_SCRIPT" <<< "$input" 2>&1
    return $?
}

assert_exit_code() {
    local expected="$1"
    local actual="$2"
    local test_name="$3"

    TESTS_RUN=$((TESTS_RUN + 1))
    if [[ "$actual" -eq "$expected" ]]; then
        echo -e "${GREEN}PASS${NC}: $test_name"
        TESTS_PASSED=$((TESTS_PASSED + 1))
        return 0
    else
        echo -e "${RED}FAIL${NC}: $test_name (expected exit $expected, got $actual)"
        TESTS_FAILED=$((TESTS_FAILED + 1))
        return 1
    fi
}

# Create temp directory for tests
TMPDIR=$(mktemp -d)
trap "rm -rf $TMPDIR" EXIT

echo "Running c3-gate tests..."
echo ""

# ============================================
# Test: Allows when no .c3/ (not a C3 project)
# ============================================
echo "--- Test: Allows without .c3/ (not C3 project) ---"

TEST_DIR="$TMPDIR/no-c3"
mkdir -p "$TEST_DIR"

OUTPUT=$(run_gate '{"tool_name":"Edit","tool_input":{"file_path":"src/main.py"}}' "$TEST_DIR")
EXIT_CODE=$?

assert_exit_code 0 $EXIT_CODE "allows when no .c3 (not C3 project)"

# ============================================
# Test: Allows when .c3/ exists but no README.md
# ============================================
echo ""
echo "--- Test: Allows with empty .c3/ ---"

TEST_DIR="$TMPDIR/empty-c3"
mkdir -p "$TEST_DIR/.c3"

OUTPUT=$(run_gate '{"tool_name":"Edit","tool_input":{"file_path":"src/main.py"}}' "$TEST_DIR")
EXIT_CODE=$?

assert_exit_code 0 $EXIT_CODE "allows with empty .c3 (not fully adopted)"

# ============================================
# Test: Blocks when C3 project has no ADR
# ============================================
echo ""
echo "--- Test: Blocks C3 project with no ADR ---"

TEST_DIR="$TMPDIR/c3-no-adr"
mkdir -p "$TEST_DIR/.c3"
echo "# Context" > "$TEST_DIR/.c3/README.md"

OUTPUT=$(run_gate '{"tool_name":"Edit","tool_input":{"file_path":"'$TEST_DIR'/src/main.py"}}' "$TEST_DIR")
EXIT_CODE=$?

assert_exit_code 2 $EXIT_CODE "blocks C3 project with no ADR"

# ============================================
# Test: Blocks when ADR is only proposed
# ============================================
echo ""
echo "--- Test: Blocks when ADR is only proposed ---"

TEST_DIR="$TMPDIR/c3-proposed-adr"
mkdir -p "$TEST_DIR/.c3/adr"
echo "# Context" > "$TEST_DIR/.c3/README.md"
cat > "$TEST_DIR/.c3/adr/adr-20260121-test.md" << 'EOF'
---
id: adr-20260121-test
title: Test ADR
status: proposed
---
# Test
EOF

OUTPUT=$(run_gate '{"tool_name":"Edit","tool_input":{"file_path":"'$TEST_DIR'/src/main.py"}}' "$TEST_DIR")
EXIT_CODE=$?

assert_exit_code 2 $EXIT_CODE "blocks when ADR is only proposed"

# ============================================
# Test: Allows when ADR is accepted
# ============================================
echo ""
echo "--- Test: Allows when ADR is accepted ---"

TEST_DIR="$TMPDIR/c3-accepted-adr"
mkdir -p "$TEST_DIR/.c3/adr"
echo "# Context" > "$TEST_DIR/.c3/README.md"
cat > "$TEST_DIR/.c3/adr/adr-20260121-test.md" << 'EOF'
---
id: adr-20260121-test
title: Test ADR
status: accepted
base-commit: abc123
---
# Test
EOF

OUTPUT=$(run_gate '{"tool_name":"Edit","tool_input":{"file_path":"'$TEST_DIR'/src/main.py"}}' "$TEST_DIR")
EXIT_CODE=$?

assert_exit_code 0 $EXIT_CODE "allows when ADR is accepted"

# ============================================
# Test: Allows editing .c3/ files
# ============================================
echo ""
echo "--- Test: Allows editing .c3/ files ---"

TEST_DIR="$TMPDIR/c3-files"
mkdir -p "$TEST_DIR/.c3"

OUTPUT=$(run_gate '{"tool_name":"Edit","tool_input":{"file_path":".c3/README.md"}}' "$TEST_DIR")
EXIT_CODE=$?

assert_exit_code 0 $EXIT_CODE "allows editing .c3/ files"

# ============================================
# Test: Edge cases
# ============================================
echo ""
echo "--- Test: Edge cases ---"

TEST_DIR="$TMPDIR/edge"
mkdir -p "$TEST_DIR"

# No file_path should allow
OUTPUT=$(run_gate '{"tool_name":"Edit","tool_input":{}}' "$TEST_DIR")
EXIT_CODE=$?
assert_exit_code 0 $EXIT_CODE "allows when no file_path"

# Empty input should allow
OUTPUT=$(run_gate '' "$TEST_DIR")
EXIT_CODE=$?
assert_exit_code 0 $EXIT_CODE "allows on empty input"

# Invalid JSON should allow
OUTPUT=$(run_gate 'not valid json' "$TEST_DIR")
EXIT_CODE=$?
assert_exit_code 0 $EXIT_CODE "allows on invalid JSON"

# ============================================
# Summary
# ============================================
echo ""
echo "======================================"
echo "Tests: $TESTS_RUN | Passed: $TESTS_PASSED | Failed: $TESTS_FAILED"
echo "======================================"

if [[ $TESTS_FAILED -gt 0 ]]; then
    exit 1
fi
exit 0
