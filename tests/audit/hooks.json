{
  "description": "Test audit hooks - traces all tool access",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Glob|Grep|Bash|Write|Edit|Task|Skill",
        "hooks": [
          {
            "type": "command",
            "command": "${SKILL_ROOT}/log-access.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
